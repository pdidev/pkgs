#!/usr/bin/make -f

# export DH_VERBOSE = 1

export DEB_BUILD_MAINT_OPTIONS = hardening=+all
export DEB_CFLAGS_MAINT_APPEND  = -Wall -pedantic
export DEB_LDFLAGS_MAINT_APPEND = -Wl,--as-needed

PKG = $(shell dpkg-parsechangelog -S Source)
VERSION = $(shell dpkg-parsechangelog -S Version)
SRCVERSION = $(shell echo $(VERSION) | sed -e 's/^[0-9]*://' -e 's/-[^-]*$$//')

VERSION_CODENAME ?= $(shell . /etc/os-release; echo "$${VERSION_CODENAME}")
ifeq (,$(filter xenial bionic disco, $(VERSION_CODENAME)))
	M4FLAGS += -DWITH_TESTING
	CMAKEFLAGS += -DBUILD_TESTING=OFF # tests currently fails because of incorrectly set ENV
else
	CMAKEFLAGS += -DBUILD_TESTING=OFF
endif

%:
	dh $@ --parallel $(DHFLAGS)

override_dh_auto_configure:
	dh_auto_configure -D plugins/mpi -- \
		$(CMAKEFLAGS) \
		-DCMAKE_BUILD_TYPE=Release

debian/%: debian/%.in
	m4 $(M4FLAGS) $< > $@

debian/control: ../$(PKG)-$(SRCVERSION)

../$(PKG)-$(SRCVERSION): ../$(PKG)_$(SRCVERSION).orig.tar.bz2
	tar -k --strip-components=1 -xf $<

../$(PKG)_$(SRCVERSION).orig.tar.bz2:
	curl -L https://gitlab.maisondelasimulation.fr/pdidev/pdi/-/archive/$(SRCVERSION)/pdi-$(SRCVERSION).tar.bz2 -o $@
