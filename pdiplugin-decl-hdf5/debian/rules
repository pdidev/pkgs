#!/usr/bin/make -f

export DEB_BUILD_MAINT_OPTIONS = hardening=+all
export DEB_CFLAGS_MAINT_APPEND  = -Wall -pedantic
export DEB_LDFLAGS_MAINT_APPEND = -Wl,--as-needed

include /usr/share/dpkg/architecture.mk

ifneq (,$(filter stretch xenial bionic disco, $(DEB_BUILD_PROFILES)))
	CMAKEFLAGS += -DBUILD_TESTING=OFF
else
	CMAKEFLAGS += -DBUILD_TESTING=OFF # tests currently fails because of incorrectly set ENV
endif

FLAVORS = serial openmpi mpich

PKG_VERSION := $(shell dpkg-parsechangelog -S version | sed 's/-.*//')

%:
	dh $@ --parallel -Dplugins/decl_hdf5

override_dh_auto_configure:  $(foreach flavor,$(FLAVORS),configure_$(flavor))

configure_serial:
	dh_auto_configure -Bbuild-serial -- \
		-DBUILD_HDF5_PARALLEL=OFF \
		-DHDF5_C_COMPILER_EXECUTABLE=/usr/bin/h5cc \
		-DINSTALL_PDIPLUGINDIR=/usr/lib/$(DEB_HOST_MULTIARCH)/pdiplugin-decl-hdf5/pdi/plugins_$(PKG_VERSION)/ \
		$(CMAKEFLAGS) \
		-DCMAKE_BUILD_TYPE=Release

configure_openmpi:
	dh_auto_configure -Bbuild-openmpi -- \
		-DBUILD_HDF5_PARALLEL=ON \
		-DHDF5_C_COMPILER_EXECUTABLE=/usr/bin/h5pcc.openmpi \
		-DINSTALL_PDIPLUGINDIR=/usr/lib/$(DEB_HOST_MULTIARCH)/pdiplugin-decl-hdf5-openmpi/pdi/plugins_$(PKG_VERSION)/ \
		$(CMAKEFLAGS) \
		-DCMAKE_BUILD_TYPE=Release

configure_mpich:
	dh_auto_configure -Bbuild-mpich -- \
		-DBUILD_HDF5_PARALLEL=ON \
		-DHDF5_C_COMPILER_EXECUTABLE=/usr/bin/h5pcc.mpich \
		-DINSTALL_PDIPLUGINDIR=/usr/lib/$(DEB_HOST_MULTIARCH)/pdiplugin-decl-hdf5-mpich/pdi/plugins_$(PKG_VERSION)/ \
		$(CMAKEFLAGS) \
		-DCMAKE_BUILD_TYPE=Release

# dh_installdeb -D is not available with debhelper 9
dh_installdeb: pdiplugin-decl-hdf5-mpich.postinst pdiplugin-decl-hdf5-mpich.prerm pdiplugin-decl-hdf5-openmpi.postinst pdiplugin-decl-hdf5-openmpi.prerm pdiplugin-decl-hdf5.postinst pdiplugin-decl-hdf5.prerm

%: %.tpl
	sed 's/#PKG_VERSION#/$(PKG_VERSION)/g' $< > $@

override_dh_auto_build: $(foreach flavor,$(FLAVORS),build_$(flavor))
build_%: build-%
	dh_auto_build -B$<

override_dh_auto_install:  $(foreach flavor,$(FLAVORS),install_$(flavor))
install_%: build-%
	dh_auto_install -B$<
